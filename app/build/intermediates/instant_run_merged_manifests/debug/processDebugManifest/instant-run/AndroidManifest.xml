        <activity android:name="mobile.binge.MovieDetailsActivity" />
        <activity android:name="mobile.binge.TVShowDetailsActivity" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="mobile.binge.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>